<UserControl
	x:Class="VidCoder.Controls.PaddingFrame"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:VidCoder.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="300"
	d:DesignWidth="300"
	mc:Ignorable="d">
	<Grid
		Name="rootGrid"
		Background="Black"
		UseLayoutRounding="True">
		<Grid.RowDefinitions>
			<RowDefinition x:Name="topPaddingRow" />
			<RowDefinition x:Name="contentRow" />
			<RowDefinition x:Name="bottomPaddingRow" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition x:Name="leftPaddingColumn" />
			<ColumnDefinition x:Name="contentColumn" />
			<ColumnDefinition x:Name="rightPaddingColumn" />
		</Grid.ColumnDefinitions>

		<Image
			Name="image"
			Grid.Row="1"
			Grid.Column="1"
			Stretch="Fill" />
	</Grid>
</UserControl>
